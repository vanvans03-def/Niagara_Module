<?xml version="1.0" encoding="UTF-8"?>
<permissions>
  <niagara-permission-groups type="all">
  </niagara-permission-groups>

  <niagara-permission-groups type="workbench">
  </niagara-permission-groups>

  <niagara-permission-groups type="station">

    <req-permission>
      <name>NETWORK_COMMUNICATION</name>
      <purposeKey>Universal Network Discovery - Allow network scanning and COV</purposeKey>
      <parameters>
        <parameter name="hosts" value="*"/>
        <parameter name="ports" value="*"/>
        <parameter name="type" value="all"/>
      </parameters>
    </req-permission>

    <std-permission>
      <name>java.lang.RuntimePermission</name>
      <target>createClassLoader</target>
    </std-permission>

    <std-permission>
      <name>java.lang.RuntimePermission</name>
      <target>getClassLoader</target>
    </std-permission>

    <std-permission>
      <name>java.lang.RuntimePermission</name>
      <target>accessDeclaredMembers</target>
    </std-permission>

    <std-permission>
      <name>java.lang.RuntimePermission</name>
      <target>accessClassInPackage.*</target>
    </std-permission>

    <std-permission>
      <name>java.lang.reflect.ReflectPermission</name>
      <target>suppressAccessChecks</target>
    </std-permission>

  </niagara-permission-groups>
</permissions>